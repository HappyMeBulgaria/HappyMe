    <section id="team" class="team-section">
        <div class="section-title-container">
            <h3 class="section-title">екип</h3>
        </div>

        <div class="team-container">
            <div class="team-description col-md-6">
                Ние сме група ентусиазирани позитивни хора, водени от идеята да направим себе си и света около нас по-добър.
            </div>
            <ul class="team-list">
                <li class="team-member col-md-2">
                    <img src="~/Content/images/kmarianov.jpg" class="team-profile-picture">
                    <p>Кристиан Мариянов</p>
                </li>

                <li class="team-member col-md-2">
                    <img src="~/Content/images/mhristoforova.jpg" class="team-profile-picture">
                    <p>Мария Христофорова</p>
                </li>

                <li class="team-member col-md-2">
                    <img src="~/Content/images/rpopova.jpg" class="team-profile-picture">
                    <p>Росица Попова</p>
                </li>

                <li class="team-member col-md-2">
                    <img src="~/Content/images/tkurtev.jpg" class="team-profile-picture">
                    <p>Теодор Куртев</p>
                </li>

                <li class="team-member col-md-2">
                    <img src="~/Content/images/yslavcheva.png" class="team-profile-picture">
                    <p>Яна Славчева</p>
                </li>
            </ul>
        </div>
    </section>

    <section id="contact-us" class="contact-form-section">
        <div class="section-title-container">
            <h3 class="section-title">контакти</h3>
        </div>

        @using (Html.BeginForm(
                    nameof(FeedbackController.Send),
                    "Feedback",
                    FormMethod.Post,
                    new { enctype = "multipart/form-data", @class = "contacts-form col-md-12" }))
        {
            @Html.AntiForgeryToken()

            <fieldset class="contact-form col-md-6 bottom-buffer">
                <div class="row bottom-buffer">
                    <div class="inner-addon left-addon col-md-4">
                        <i class="fa fa-user"></i>
                        <input type="text" name="name" placeholder="Name" required>
                    </div>
                    <div class="inner-addon left-addon col-md-4">
                        <i class="fa fa-envelope-o"></i>
                        <input type="email" name="email" placeholder="Email address" required>
                    </div>
                    <div class="inner-addon left-addon col-md-4">
                        <i class="fa fa-pencil"></i>
                        <input type="text" name="subject" placeholder="Subject" required>
                    </div>
                </div>

                <textarea name="message" placeholder="Add your message here" rows="10" required></textarea>
            </fieldset>
            <div class="text-center bottom-buffer top-buffer">
                <input type="submit" id="submit" value="Submit" class="btn btn-success">
            </div>
        }
    </section>
</div>

@section scripts{
    @Scripts.Render("~/bundles/slick")
    <script>
        // TODO: Extract these in external js file
        $(function () {
            $(".scroll").click(function (event) {
                event.preventDefault();
                var dest;
                if ($(this.hash).offset().top > $(document).height() - $(window).height()) {
                    dest = $(document).height() - $(window).height();
                } else {
                    dest = $(this.hash).offset().top;
                }
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top - 50
                }, 1000, 'swing');
            });

            $(".slider").slick({
                autoplay: true,
                dots: true,
                arrows: false,
                responsive: [{
                    breakpoint: 0,
                    settings: {
                        dots: false,
                        arrows: false,
                        infinite: false,
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                }]
            });
        });

        $(".flip").hover(function () {
            $(this).find(".card").toggleClass("flipped");
            return false;
        });
    </script>
}