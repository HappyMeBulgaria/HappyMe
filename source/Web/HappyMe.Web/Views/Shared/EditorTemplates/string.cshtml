@model String

@{
    var placeholder = string.Empty;
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("placeholder"))
    {
        placeholder = ViewData.ModelMetadata.AdditionalValues["placeholder"] as string;
    }

    bool? isDisabled = null;
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("enabled"))
    {
        isDisabled = ViewData.ModelMetadata.AdditionalValues["enabled"] as bool?;
    }

    var disabled = isDisabled.HasValue && isDisabled.Value ? "disabled" : string.Empty;

    var htmlAttributes = new
    {
        disabled,
        placeholder,
        @class = "form-control",
    };
}

@Html.TextBoxFor(m => m, htmlAttributes)