@using Resource = Resources.Account.Views.SendCode;

@model HappyMe.Web.Models.ViewModels.Account.SendCodeViewModel
@{
    ViewBag.Title = Resource.Title;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)

    <div class="row">
        <div class="col-md-8">
            @Resource.Two_Factor_Choose:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@Resource.Submit_button" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
