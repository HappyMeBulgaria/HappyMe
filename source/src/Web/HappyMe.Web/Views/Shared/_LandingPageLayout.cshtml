@using HappyMe.Web.Common.Extensions

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@section scripts {
    @RenderSection("scripts", false)
}

@section styles {
    @RenderSection("styles", false)
    <environment names="Development">
        <link rel="stylesheet" href="~/css/landing-page.css" />
        <link rel="stylesheet" href="~/css/reset-css.css" />
        <link rel="stylesheet" href="~/css/global.css" />
        <link rel="stylesheet" href="~/css/override.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/landing-page.min.css" />
    </environment>
}

<header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-action="Index" asp-controller="Home" asp-area="" class="navbar-brand">
                    <img class="nav-logo" alt="Happy Me Logo" src="~/images/nav-logo-min.png">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class=""><a class="scroll" href="#homepage">начало</a></li>
                    <li class=""><a class="scroll" href="#mission">мисия</a></li>
                    <li class=""><a class="scroll" href="#functions">функции</a></li>
                    <li class=""><a class="scroll" href="#modules">модули</a></li>
                    <li class=""><a class="scroll" href="#team">екип</a></li>
                    <li class=""><a class="scroll" href="#contact-us">контакти</a></li>
                    @if (this.User.IsAdmin())
                    {
                        <li class="">
                            <a asp-action="Index" , asp-controller="Dashboard" asp-area="Administration">Администрация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</header>

@RenderBody()

<footer>
    <p>&copy; @DateTime.Now.Year - Happy Me</p>
</footer>